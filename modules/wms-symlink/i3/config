#===Startup App===
exec --no-startup-id feh --bg-fill $(gsettings get org.gnome.desktop.background picture-uri | sed 's/file:\/\///' | tr -d "'")
exec --no-startup-id picom --config $HOME/.config/i3/picom.conf
exec --no-startup-id dex-autostart --autostart --environment i3
# exec --no-startup-id avizo-service
exec --no-startup-id nm-applet --indicator
exec --no-startup-id caffeine

include common.conf

tiling_drag modifier titlebar
#---Volume
bindsym XF86AudioLowerVolume  exec --no-startup-id volumectl -u down
bindsym XF86AudioRaiseVolume  exec --no-startup-id volumectl -u up
bindsym XF86AudioMute         exec --no-startup-id volumectl toggle-mute
bindsym XF86AudioMicMute      exec --no-startup-id volumectl -m toggle-mute
#---Brightness
bindsym XF86MonBrightnessUp   exec --no-startup-id lightctl = "$(light -G | awk '{ print int(($1 + .72) * 1.4) }')"
bindsym XF86MonBrightnessDown exec --no-startup-id lightctl = "$(light -G | awk '{ print int($1 / 1.4) }')"
#---Lock
# xset dpms (standby) (suspend) (off)
exec --no-startup-id xset dpms 600 600 0
exec --no-startup-id xss-lock --transfer-sleep-lock -- betterlockscreen -l blur
exec --no-startup-id betterlockscreen -w blur
exec --no-startup-id betterlockscreen -u $(gsettings get org.gnome.desktop.background picture-uri | sed 's/file:\/\///' | tr -d "'")
bindsym XF86ScreenSaver exec --no-startup-id betterlockscreen -l blur
